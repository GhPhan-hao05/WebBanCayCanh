@model IEnumerable<DoanMonhoc_WebCayCanh.Models.TypeProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("CreateType", "TypeProduct")" class="btn btn-secondary">Thêm loại mới</a>
</p>
<p>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Về trang sản phẩm <<<</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenLoai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            @Html.ActionLink("Sửa loại sản phẩm", "EditType", new { id = item.IdType }, new { @class = "btn btn-outline-primary" }) 
            @Html.ActionLink("Xóa loại sản phẩm", "DeleteType", new { id = item.IdType }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
