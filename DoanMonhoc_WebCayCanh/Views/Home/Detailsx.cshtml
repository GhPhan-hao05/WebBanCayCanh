@model IEnumerable<DoanMonhoc_WebCayCanh.Models.Product>
@using DoanMonhoc_WebCayCanh.Models
@{
    ViewBag.Title = "Detailsx";
}
@{
    ShopDBContext db = new ShopDBContext();
    var alltype = from all in db.TypeProducts select all;
}
<div class="container">
    <div class="row">
        <div class="row pt-3 col-3 text-center text-dark ">
            <div class="navbar navbar-expand-lg  ">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navhoanhua" aria-controls="navhoanhua" aria-expanded="false" aria-label="Toggle navigation">
                    v
                </button>
                <div class="collapse navbar-collapse" id="navhoanhua">
                    <div class="btn-group-vertical" role="group" aria-label="Basic example">
                        <a href="/Home/Index" class="link-nostyle btn btn-secondary"> Tất cả sản phẩm</a>
                        @foreach (var type in alltype.ToList())
                        {
                            <a href="/Home/Detailsx/@type.IdType" class="link-nostyle btn btn-secondary"> @type.TenLoai</a>

                        }
                    </div>
                </div>
            </div>
        </div>


        <div class="row col-9">
            <div class="row"><h2>Tất cả sản phẩm</h2></div>
            @foreach (var item in Model)
            {
                <div class="card col-12 col-md-4 col-lg-3 ">
                    <img class="card-img-top" src="~/Content//Images/@item.Image" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.NameProduct</h5>
                        <p class="card-text">@item.Price</p>
                        <a href="/Home/Details/@item.Id" class="btn btn-secondary d-grid">Details</a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

